@model IEnumerable<TestFacturacionMVC.NETFramework.Models.Factura>

@{
    ViewBag.Title = "Facturas";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Agregar nueva factura", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Fecha
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.pkIdFactura }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.pkIdFactura }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.pkIdFactura })
            </td>
        </tr>
    }
</table>